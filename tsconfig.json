{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./bin/",
        "sourceMap": true,
        "noImplicitAny": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "./src/**/*"
    ]
}